@page
@model WebAppRazor1.Pages.Tareas_canceladasModel
@{
    ViewData["Title"] = "Tareas canceladas";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h4 class="display-4">Lista de tareas</h4>
        <p class="lead">Revisa tus tareas canceladas</p>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="btn-group align-items-center" role="group">
                <input type="hidden" name="pagina" value="@Model.PaginaActual" />
                <span class="ms-3 me-2">Nro filas:</span>
                <input type="number" name="tamanoPagina" min="1" max="99" value="@Model.TamanoPagina" class="form-control" style="width:80px;" />
            </form>
        </div>
    </div>

    <!-- Tabla de tareas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Estado</th>
                            <th>Título</th>
                            <th>Fecha Vencimiento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tarea in Model.Tareas)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-success">
                                        @tarea.estado
                                    </span>
                                </td>
                                <td>
                                    <strong>@tarea.nombreTarea</strong>
                                </td>
                                <td>@tarea.fechaVencimiento</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-success" title="Marcar como completada">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <button class="btn btn-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-page="./Tareas_finalizadas" asp-route-pagina="@i" asp-route-tamanoPagina="@Model.TamanoPagina">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
