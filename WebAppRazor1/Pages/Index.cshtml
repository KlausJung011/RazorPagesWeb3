@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h4 class="display-4">Lista de tareas asignadas</h4>
        <p class="lead">Administra tus tareas pendientes y completadas</p>
    </div>

    <!-- Filtros y botón nueva tarea -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="btn-group" role="group">
                <button class="btn btn-primary">Todas</button>
                <button class="btn btn-outline-primary">Pendientes</button>
                <button class="btn btn-outline-primary">Completadas</button>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-success">Nueva Tarea</button>
        </div>
    </div>

    <!-- Tabla de tareas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Estado</th>
                            <th>Título</th>
                            <th>Fecha Vencimiento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span class="badge bg-warning">Pendiente</span>
                            </td>
                            <td>
                                <strong>Diseñar logo corporativo</strong>
                            </td>
                            <td>15/12/2024</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-success" title="Marcar como completada">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                    <button class="btn btn-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        
                        @foreach (var tarea in Model.Tareas)
                        {
                            <tr>
                                <td>
                                    <span class="badge @(tarea.estado switch {
                                        "Pendiente" => "bg-warning text-dark",
                                        "En curso" => "bg-info",
                                        "Finalizado" => "bg-success",
                                        "Cancelado" => "bg-danger",
                                        _ => "bg-secondary"
                                        })">
                                        @tarea.estado
                                    </span>
                                </td>
                                <td>
                                    <strong>@tarea.nombreTarea</strong>
                                </td>
                                <td>@tarea.fechaVencimiento</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-success" title="Marcar como completada">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <button class="btn btn-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        
