@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h4 class="display-4">Lista de tareas asignadas</h4>
        <p class="lead">Administra tus tareas pendientes y completadas</p>
    </div>

    <!-- Filtros y botón nueva tarea -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="btn-group align-items-center" role="group">
                <input type="hidden" name="pagina" value="@Model.PaginaActual" />
                <input type="hidden" name="estado" value=""/>
                <!--
                <input type="hidden" name="estado" value=""/>@Model.EstadoTarea
                <button type="submit" name="estado" value="" class="btn @(string.IsNullOrEmpty(Request.Query["estado"]) ? "btn-primary" : "btn-outline-primary")">
                    Todas
                </button>
                <button type="submit" name="estado" value="Pendiente" class="btn @(Request.Query["estado"] == "Pendiente" ? "btn-primary" : "btn-outline-primary")">
                    Pendientes
                </button>
                <button type="submit" name="estado" value="En curso" class="text-nowrap btn
                    @(Request.Query["estado"] == "En curso" ? "btn-primary" : "btn-outline-primary")">
                    En curso
                </button>-->
                <span class="ms-3 me-2">Nro filas:</span>
                <input type="number" name="tamanoPagina" min="1" max="99" value="@Model.TamanoPagina"
                       class="form-control" style="width:80px;"
                       onchange="this.form.submit()" />
                <button class="btn btn-success ms-3">Nueva Tarea</button>
            </form>
        </div>
    </div>

    <!-- Tabla de tareas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Estado</th>
                            <th>Título</th>
                            <th>Fecha Vencimiento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--<tr>
                            <td>
                                <span class="badge bg-warning">Pendiente</span>
                            </td>
                            <td>
                                <strong>Diseñar logo corporativo</strong>
                            </td>
                            <td>15/12/2024</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-success" title="Marcar como completada">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                    <button class="btn btn-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>-->
                        @foreach (var tarea in Model.Tareas)
                        {
                            <tr>
                                <td>
                                    <span class="badge @(tarea.estado switch {
                                        "Pendiente" => "bg-warning text-dark",
                                        "En curso" => "bg-info",
                                        "Finalizado" => "bg-success",
                                        "Cancelado" => "bg-danger",
                                        _ => "bg-secondary"
                                        })">
                                        @tarea.estado
                                    </span>
                                </td>
                                <td>
                                    <strong>@tarea.nombreTarea</strong>
                                </td>
                                <td>@tarea.fechaVencimiento</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-success" title="Marcar como completada">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <button class="btn btn-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                   <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" 
                       asp-page="./index" 
                       asp-route-pagina="@i"
                       asp-route-tamanoPagina="@Model.TamanoPagina">
                        @i
                    </a>
                </li>
                }
            </ul>

        </nav>
        <!--<form method="get" class="d-flex justify-content-center align-items-center ms-2" style="gap:8px;">
            <input type="number" name="pagina" min="1" max="@Model.TotalPaginas" class="form-control" style="width:80px;" placeholder="Página" required />
            <button type="submit" class="btn btn-outline-primary">Ir</button>
        </form>-->
    </div>
</div>

