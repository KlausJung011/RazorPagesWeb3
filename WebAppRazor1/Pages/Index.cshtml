@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h4 class="display-4">Lista de tareas</h4>
        <p class="lead">Administra tus tareas pendientes y en curso</p>
    </div>

    <!-- Filtros y botón nueva tarea -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="btn-group align-items-center" role="group">
                <input type="hidden" name="pagina" value="@Model.PaginaActual" />
                <input type="hidden" name="estado" value=""/>
                <!--
                <input type="hidden" name="estado" value=""/>@Model.EstadoTarea
                <button type="submit" name="estado" value="" class="btn @(string.IsNullOrEmpty(Request.Query["estado"]) ? "btn-primary" : "btn-outline-primary")">
                    Todas
                </button>
                <button type="submit" name="estado" value="Pendiente" class="btn @(Request.Query["estado"] == "Pendiente" ? "btn-primary" : "btn-outline-primary")">
                    Pendientes
                </button>
                <button type="submit" name="estado" value="En curso" class="text-nowrap btn
                    @(Request.Query["estado"] == "En curso" ? "btn-primary" : "btn-outline-primary")">
                    En curso
                </button>-->
                <span class="ms-3 me-2">Nro filas:</span>
                <input type="number" name="tamanoPagina" min="1" max="99" value="@Model.TamanoPagina"
                       class="form-control" style="width:80px;"
                       onchange="this.form.submit()" />
                <button type="button" class="btn btn-success ms-3" data-bs-toggle="modal" data-bs-target="#modalNuevaTarea">
                    Nueva Tarea
                </button>
            </form>
        </div>
    </div>

    <!-- Tabla de tareas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Estado</th>
                            <th>Título</th>
                            <th>Fecha Vencimiento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--<tr>
                            <td>
                                <span class="badge bg-warning">Pendiente</span>
                            </td>
                            <td>
                                <strong>Diseñar logo corporativo</strong>
                            </td>
                            <td>15/12/2024</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-success" title="Marcar como completada">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                    <button class="btn btn-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>-->
                        @foreach (var tarea in Model.Tareas)
                        {
                            <tr>
                                <td>
                                    <span class="badge @(tarea.estado switch {
                                        "Pendiente" => "bg-warning text-dark",
                                        "En curso" => "bg-info",
                                        "Finalizado" => "bg-success",
                                        "Cancelado" => "bg-danger",
                                        _ => "bg-secondary"
                                        })">
                                        @tarea.estado
                                    </span>
                                </td>
                                <td>
                                    <strong>@tarea.nombreTarea</strong>
                                </td>
                                <td>@tarea.fechaVencimiento</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-success" title="Marcar como completada">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-primary"
                                                title="Editar"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEditar-@tarea.idTarea">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    <!-- Modal Editar por fila -->
                                    @{
                                        var iso = tarea.fechaVencimiento;
                                        if (DateTime.TryParseExact(
                                                tarea.fechaVencimiento,
                                                "dd/MM/yyyy",
                                                System.Globalization.CultureInfo.InvariantCulture,
                                                System.Globalization.DateTimeStyles.None,
                                                out var dt))
                                        {
                                            iso = dt.ToString("yyyy-MM-dd");
                                        }
                                    }
                                    <div class="modal fade" id="modalEditar-@tarea.idTarea" tabindex="-1" aria-labelledby="modalEditarLabel-@tarea.idTarea" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form method="post" asp-page-handler="Edit">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="modalEditarLabel-@tarea.idTarea">Editar tarea</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="EditId" value="@tarea.idTarea" />
                                                        <!-- Preservar paginación/filtro -->
                                                        <input type="hidden" name="pagina" value="@Model.PaginaActual" />
                                                        <input type="hidden" name="estado" value="@Model.EstadoTarea" />
                                                        <input type="hidden" name="tamanoPagina" value="@Model.TamanoPagina" />

                                                        <div class="mb-3">
                                                            <label class="form-label">Nombre</label>
                                                            <input type="text" name="EditNombre" class="form-control" value="@tarea.nombreTarea" required />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Fecha de vencimiento</label>
                                                            <input type="date" name="EditFecha" class="form-control" value="@iso" required />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Estado</label>
                                                            <select name="EditEstado" class="form-select" required>
                                                                @{
                                                                    var estados = new[] { "Pendiente", "En curso", "Finalizado", "Cancelado" };
                                                                }
                                                                @foreach (var est in estados)
                                                                {
                                                                    if (tarea.estado == est)
                                                                    {
                                                                        <option value="@est" selected>@est</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@est">@est</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Nueva Tarea -->
    <div class="modal fade" id="modalNuevaTarea" tabindex="-1" aria-labelledby="modalNuevaTareaLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Create">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalNuevaTareaLabel">Nueva tarea</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Preservar paginación/filtro -->
                        <input type="hidden" name="pagina" value="@Model.PaginaActual" />
                        <input type="hidden" name="estado" value="@Model.EstadoTarea" />
                        <input type="hidden" name="tamanoPagina" value="@Model.TamanoPagina" />

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" name="NuevaNombre" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fecha de vencimiento</label>
                            <input type="date" name="NuevaFecha" class="form-control" required />
                        </div>
                        <div class="alert alert-info py-2">
                            El estado se guardará como <strong>Pendiente</strong>.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Crear tarea</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                   <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" 
                       asp-page="./index" 
                       asp-route-pagina="@i"
                       asp-route-tamanoPagina="@Model.TamanoPagina">
                        @i
                    </a>
                </li>
                }
            </ul>

        </nav>
        <!--<form method="get" class="d-flex justify-content-center align-items-center ms-2" style="gap:8px;">
            <input type="number" name="pagina" min="1" max="@Model.TotalPaginas" class="form-control" style="width:80px;" placeholder="Página" required />
            <button type="submit" class="btn btn-outline-primary">Ir</button>
        </form>-->
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">